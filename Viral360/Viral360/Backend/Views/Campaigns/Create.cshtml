                <div class="form-group">
                    @Html.LabelFor(model => model.Post.OriginalMediaLink, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Post.OriginalMediaLink, new { htmlAttributes = new { @class = "form-control" }, Type = "file", onchange = "DisplayFilesToUpload('Post_OriginalMediaLink')" })
                        @Html.ValidationMessageFor(model => model.Post.OriginalMediaLink, "", new { @class = "text-danger" })
                    </div>
                    <p id="FilesToUpload"></p>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="btn btn-default" onclick="HideFirstShowSecond('#div_craft_your_post', '#div_campaign_part1')" style="float:left;">
                            Previous
                        </a>
                        <a class="btn btn-default" onclick="ValidateHideFirstShowSecond(@ViewBag.DistributorId, '#createCampaignForm', '#div_craft_your_post', '#div_add_contacts')" style="float:right;">Next</a>
                    </div>
                </div>
            </div>
            @*<div class="form-group">
                    @Html.LabelFor(model => model.PostId, "PostId", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.DropDownList("PostId", null, htmlAttributes: new { @class = "form-control" })
