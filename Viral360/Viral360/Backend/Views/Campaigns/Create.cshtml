        <div id="div_add_contacts" class="row" style="display:none;">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="custom-control-label col-lg-3">Select Contacts</label>
                </div>

                <div class="row" id="div_add_contact">
                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.LabelFor(model => model.SocialMediaId, "Social Media", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-10">
                                @Html.DropDownList("SocialMediaId", null, htmlAttributes: new { @id = "add_contact_platform_list", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SocialMediaId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4" for="add_contact_email">Email</label>
                            <div class="col-md-10">
                                <input class="form-control text-box single-line" data-val="true" data-val-required="The Email field is required." id="add_contact_email" name="add_contact_email" type="email" value="" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="add_contact_email" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4" for="add_contact_first_name">First Name</label>
                            <div class="col-md-10">
                                <input class="form-control text-box single-line" data-val="true" data-val-length-max="100" id="add_contact_first_name" name="add_contact_first_name" type="text" value="" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="add_contact_first_name" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4" for="add_contact_last_name">Last Name</label>
                            <div class="col-md-10">
                                <input class="form-control text-box single-line" data-val="true" data-val-length-max="100" id="add_contact_last_name" name="add_contact_last_name" type="text" value="" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="add_contact_last_name" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4" for="add_contact_age">Age</label>
                            <div class="col-md-10">
                                <input class="form-control text-box single-line" data-val="true" id="add_contact_age" name="add_contact_age" type="number" value="" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="add_contact_age" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="add_contact_country">Country</label>
                            <div class="col-md-10">
                                <input class="form-control text-box single-line" data-val="true" data-val-length="The field Country must be a string with a maximum length of 100." data-val-length-max="100" id="add_contact_country" name="add_contact_country" type="text" value="" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="add_contact_country" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="add_contact_province">Province</label>
                            <div class="col-md-10">
                                <input class="form-control text-box single-line" data-val="true" data-val-length="The field Province must be a string with a maximum length of 100." data-val-length-max="100" id="add_contact_province" name="add_contact_province" type="text" value="" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="add_contact_province" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="add_contact_city">City</label>
                            <div class="col-md-10">
                                <input class="form-control text-box single-line" data-val="true" data-val-length="The field City must be a string with a maximum length of 100." data-val-length-max="100" id="add_contact_city" name="add_contact_city" type="text" value="" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="add_contact_city" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-10">
                                @Html.EnumDropDownListFor(model => model.Gender, htmlAttributes: new { @id = "add_contact_gender", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a class="btn btn-default" onclick="AddContact()" style="float:left;">Add Contact</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="div_import_contacts" class="row">
                    <div class="form-group">
                        <label class="control-label col-md-3" for="file_import_contacts">Import Contacts</label>
                        <div class="col-md-10">
                            <input name="file_import_contacts" id="file_import_contacts" onchange="ImportContacts('file_import_contacts', @ViewBag.DistributorId,)" type="file" value="" htmlattributes="{ class = form-control }">
                            <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="file_import_contacts"></span>
                        </div>
                        <p id="FilesToUpload"></p>
                    </div>
                    <table id="myTable"></table>
                </div>
                <div id="div_select_contacts" class="row">
                    <table id="contacts_table2" class="table"></table>
                    <table id="contacts_table" class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Distributor.Contacts.FirstOrDefault().Platform)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Distributor.Contacts.FirstOrDefault().Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Distributor.Contacts.FirstOrDefault().FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Distributor.Contacts.FirstOrDefault().LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Distributor.Contacts.FirstOrDefault().City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Distributor.Contacts.FirstOrDefault().Gender)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Distributor.Contacts.FirstOrDefault().Age)
                            </th>
                            <th></th>
                        </tr>
                        <tbody id="tbody_contacts"></tbody>

                    </table>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a value="Previous" class="btn btn-default" onclick="HideFirstShowSecond('#div_add_contacts', '#div_craft_your_post')" style="float:left;">Previous</a>
                        <a value="Next" class="btn btn-default" onclick="ValidateHideFirstShowSecond(@ViewBag.DistributorId, '#createCampaignForm', '#div_add_contacts', '#div_campaign_part_2')" style="float:right;">Next</a>
                    </div>
                </div>
            </div>
        </div>
        <div id="div_campaign_part_2" class="row" style="display:none;">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="form-group">
                        <label class="custom-control-label col-lg-3">Finish</label>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CampaignType, htmlAttributes: new { @class = "control-label col-md-3" })
