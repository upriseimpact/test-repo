                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="btn btn-default" onclick="ValidateHideFirstShowSecond(@ViewBag.DistributorId, '#createCampaignForm', '#div_campaign_part1', '#div_craft_your_post')">Next</a>
                    </div>
                </div>
            </div>
        </div>
        <div id="div_craft_your_post" class="row" style="display:none;">
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="custom-control-label col-lg-3">Craft Your Post</label>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Post.PostTitle, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Post.PostTitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Post.PostTitle, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Post.PostMessage, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Post.PostMessage, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Post.PostMessage, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Post.MediaType, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(model => model.Post.MediaType, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Post.MediaType, "", new { @class = "text-danger" })
